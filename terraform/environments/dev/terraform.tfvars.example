# Development Environment Configuration
# Copy this file to terraform.tfvars and fill in your values

##############################################
# Required Variables
##############################################

subscription_id     = "YOUR-SUBSCRIPTION-ID"
resource_group_name = "YOUR-RESOURCE-GROUP"

##############################################
# Basic Configuration
##############################################

prefix = "mycompany"

common_tags = {
  Project     = "AKS-Infrastructure"
  CostCenter  = "Engineering"
  Owner       = "platform-team@example.com"
  Department  = "DevOps"
}

##############################################
# Network Configuration
##############################################

vnet_address_space = ["10.0.0.0/16"]

subnet_configuration = {
  nodes = "10.0.1.0/24"
}

##############################################
# AKS Configuration
##############################################

# Free tier for development (Standard for production)
aks_sku_tier = "Free"

# System Node Pool (critical system pods)
system_node_pool_count          = 2
system_node_pool_vm_size        = "Standard_D2s_v3"
system_node_pool_auto_scaling   = false
# system_node_pool_min_count    = 2
# system_node_pool_max_count    = 5

# Application Node Pool (your apps)
app_node_pool_count             = 1
app_node_pool_vm_size           = "Standard_D2s_v3"
app_node_pool_auto_scaling      = false
# app_node_pool_min_count       = 1
# app_node_pool_max_count       = 3

##############################################
# Container Registry
##############################################

enable_acr = true
acr_sku    = "Basic"  # Standard or Premium for production

##############################################
# Monitoring
##############################################

log_retention_days = 30  # 90 or 180 for production

##############################################
# Flux CD (GitOps)
##############################################

enable_flux = true
flux_version = "2.12.0"

# Monorepo Setup: Point to this repository and specify the manifests path
flux_git_repo_url    = "https://github.com/YOUR-USERNAME/aks-terraform"  # This repository
flux_git_repo_branch = "main"
flux_git_repo_path   = "./app-manifests"  # Path within repo for Flux to watch
